<h1>Offers#index</h1>
<p>Find me in app/views/offers/index.html.erb</p>
<% @offers.each do |offer| %>
  <a href = "<%= "offer/#{offer.id}" %>">
    <div>
      <h4><%= "#{offer.quantity} " %>
      <% if offer.unit != "" %>
        <%= "#{offer.unit} of " %>
      <% end %>
      <%= "#{offer.commodity.name}" %></h4>
      <% if offer.commodity.image != "" %>
        <%= image_tag offer.commodity.image %>
      <% end %>
    </a>
      <p>By: <%= link_to "#{offer.user.username}", user_path_url(offer.user.username) %></p>
    </div>
<% end %>
