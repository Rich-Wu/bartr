<!DOCTYPE html>
<html>
  <head>
    <title>Bartr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
        <div id="logo">
          <a href='/main'>
          </a>
        </div>
      <div>
      <%= link_to "Home", main_path, {class: 'button'} %>
      <% if session[:id] %>
        <%= link_to "My Account", user_path(User.find(session[:id]).username), {class: 'button'} %>
        <%= link_to "My Proposed Trades", trades_path, {class: 'button'} %>
        <%= link_to "Update Account Information", account_path, {class: 'button'} %>
        <%= button_to "Logout", logout_path, method: 'post', html: {class: 'button'} %>
      <% else %>
        <%= link_to "Signup", signup_path, {class: 'button'} %>
        <%= link_to "Log In", login_path, {class: 'button'} %>
      <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
