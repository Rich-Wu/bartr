<div class="container">
  <div class="formBody">
    <h2 class="formHeader">Log In</h2>
    <%= form_tag '/login', class: 'form' do %>
      <%= text_field_tag :email, nil, placeholder: "Email" %>
      <%= password_field_tag :password, nil, placeholder: "Password" %>
      <%= submit_tag "Log In" %>
    <% end %>
  </div>
</div>
