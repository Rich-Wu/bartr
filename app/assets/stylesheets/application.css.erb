@import url('https://fonts.googleapis.com/css?family=Major+Mono+Display|Merriweather|Raleway');

:root {
  background-color: #6b94d6;
}

body {
  font-family: 'Raleway';
  color: white;
  margin: 0;
  padding: 0;
}

h1,h2,h3,h4,h5,h6 {
  font-family: 'Major Mono Display';
}

#logo {
  background-image: url('<%= image_path('bartr-logo-small.png') %>');
  width: 177px;
  height: 70px;
}

.centerText {
  text-align: center;
}

.tradeCard {

}

.container {
  max-width: 80%;
  margin: auto;
}

.signupForm {
  background-color: white;
  min-width: 400px;
  max-width: 40%;
  margin: inherit;
  border-radius: 40px;
}

.tradeCard {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex {
  display: flex;
}

.flexCenter {
  justify-content: center;
}

.textCard {
  display: flex;
  flex-direction: column;
}

.bigger {
  font-size: 1.2em;
}
